# notes
noteFn() {
  local noteDir="$HOME/perso/notes"
  if [ $# -eq 0 ]; then
    cd ${noteDir}
  elif [[ "$1" == "new" ]]; then
    mkdir -p ${noteDir}/$(date +%Y)
    v ${noteDir}/$(date +%Y)/$(date +%F)-$2.md
  else
    v ${noteDir}/$1
  fi
}
alias note="noteFn"
